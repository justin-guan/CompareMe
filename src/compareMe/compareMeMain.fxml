<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.CheckBox?>
<?import javafx.scene.control.RadioButton?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.ToggleGroup?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.RowConstraints?>
<?import javafx.scene.layout.VBox?>

<VBox alignment="center" spacing="10" stylesheets="/compareMe/style/style.css" xmlns="http://javafx.com/javafx/8.0.112" xmlns:fx="http://javafx.com/fxml/1" fx:controller="compareMe.CompareMeController">
    <GridPane alignment="center" hgap="10" vgap="10">
        <Button fx:id="selectDir" mnemonicParsing="false" onAction="#selectDirectory1" text="Choose a Directory" GridPane.columnIndex="0" />
        <TextField fx:id="directory" editable="false" GridPane.columnIndex="1" />
      <columnConstraints>
         <ColumnConstraints />
         <ColumnConstraints />
      </columnConstraints>
      <rowConstraints>
         <RowConstraints />
      </rowConstraints>
    </GridPane>
   <GridPane alignment="center">
     <columnConstraints>
       <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
       <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
         <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
     </columnConstraints>
     <rowConstraints>
       <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
     </rowConstraints>
      <children>
         <CheckBox fx:id="recursive" mnemonicParsing="false" selected="true" text="Recursive" GridPane.columnIndex="0" GridPane.halignment="CENTER" GridPane.rowIndex="0" />
         <CheckBox fx:id="secondCheck" mnemonicParsing="false" text="Second Check" GridPane.columnIndex="1" GridPane.halignment="CENTER" GridPane.rowIndex="0" />
         <CheckBox fx:id="autoDelete" mnemonicParsing="false" selected="true" text="Auto Delete" GridPane.columnIndex="2" GridPane.halignment="CENTER" GridPane.rowIndex="0" />
      </children>
   </GridPane>
   <GridPane alignment="center">
     <columnConstraints>
       <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
       <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
       <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
       <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
     </columnConstraints>
     <rowConstraints>
       <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
     </rowConstraints>
      <children>
          <RadioButton mnemonicParsing="false" text="MD5" GridPane.columnIndex="0" GridPane.rowIndex="0" GridPane.halignment="CENTER">
            <toggleGroup>
               <ToggleGroup fx:id="hashFunction" />
            </toggleGroup></RadioButton>
          <RadioButton mnemonicParsing="false" text="SHA-1" toggleGroup="$hashFunction" GridPane.columnIndex="1" GridPane.rowIndex="0" GridPane.halignment="CENTER"/>
          <RadioButton mnemonicParsing="false" selected="true" text="SHA-256" toggleGroup="$hashFunction" GridPane.columnIndex="2" GridPane.rowIndex="0" GridPane.halignment="CENTER"/>
          <RadioButton mnemonicParsing="false" text="SHA-512" toggleGroup="$hashFunction" GridPane.columnIndex="3" GridPane.rowIndex="0" GridPane.halignment="CENTER"/>
      </children>
   </GridPane>
    <Button mnemonicParsing="false" onAction="#beginCompare" text="Start Comparing!" />
   <padding>
      <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
   </padding>
</VBox>
